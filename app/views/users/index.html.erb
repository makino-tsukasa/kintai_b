<% provide(:title, '一覧') %>

<!-- 追加機能 no.9 -->
<% if params[:search].present? %>
  <h1>検索結果</h1>
<% else %>
  <h1>ユーザー一覧</h1>
<% end %>

<!--  検索拡張機能  -->
<div id="nav-search">
  <%= form_tag(users_path, :method => 'get') do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], placeholder: "ユーザー名検索", class: "form-control" %>
      <span class="input-group-btn">
      <%= button_tag "検索", :name => nil, class: "btn btn-primary" %>
      </span>
    </div>
  <% end %>
</div>

<%= will_paginate @users, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>

<ul class="users">
    <%= render @users %>
</ul>

